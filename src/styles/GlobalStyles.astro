  body.dark .astro-code span {
    color: var(--shiki-dark) !important;
  }

  ol,
  ul {
    padding-inline-start: 20px;
  }

  .icon-button {
    display: inline-block;
    width: 34px;
    height: 34px;
    padding: 8px;
    border-radius: 4px;
    color: var(--color-secondary);
  }

  .icon-button:hover {
    background-color: #f1f3f5;
  }

  body.dark .icon-button:hover {
    background-color: #212529;
  }
