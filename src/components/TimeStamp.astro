---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---
<time datetime={date.toISOString()}>
	{date.toLocaleDateString('en-us', {
		year: 'numeric',
		month: 'short',
		day: 'numeric',
	})}
</time>
<style>
	time {
		color: var(--color-secondary);
		font-size: 12px;
		vertical-align: sub;
	}
</style>